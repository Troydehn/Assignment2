{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
      "url": "https://raw.githubusercontent.com/Troydehn/Assignment2/master/Processing/division_of_crimes.csv"
  },
  "width": 500,
  "height": 250,
  "mark": "rect",
  "encoding": {
      "y": {
          "field": "Crime Type",
          "title": "Crime Type"
      },
      "x": {
          "field": "jurisdiction",
          "title": "State"
      },
      "color": {
          "field": "Value",
          "type": "quantitative",
          "scale":{"scheme": "inferno",
                    "reverse": true},
          "legend": {
              "title": "Value"
          }
          
      }
  }
}