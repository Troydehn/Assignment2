{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Prisoner Count around America (2016)",
    "width": 500,
    "height": 350,
    "projection": {
        "type": "equirectangular"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/Troydehn/Assignment2/master/ne_110m_admin_1_states_provinces.json",
        "format": {
            "type": "topojson", 
            "feature": "ne_110m_admin_1_states_provinces"
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    "transform": [
        {
            "lookup": "properties.name",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/Troydehn/Assignment2/master/Processing/conviction_rate_per1000.csv"
                },
                "key": "jurisdiction",
                "fields": ["prisoner_count"]
            }
        }
    ],
    "mark": {
        "type": "geoshape"
    },
    "encoding": {
        "color": {
            "field": "prisoner_count",
            "type": "quantitative",
            "scale": {"scheme": "reds"}
        },
        "tooltip": [
            {"field": "properties.name", "type": "nominal", "title": "jurisdiction"},
            {"field": "prisoner_count", "type": "quantitative"}
        ]
    }   
}