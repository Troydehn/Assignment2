{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "https://raw.githubusercontent.com/Troydehn/Assignment2/master/Processing/division_of_crimes.csv"},
    "title": "Division of Crime",
    "mark": "bar",
    "width": 500,
    "height": 350,
    "encoding": {
      "x": {
        "field": "State",
        "title": "State",
        "type": "nominal",
        "sort": "y"
      },
      "y": {
        "field": "Value",
        "type": "quantitative",
        "title": "Crimes per 10,000 people"
      },
      "fillOpacity": {
        "value": 1
      },
      "color": {
        "field": "Crime Type",
        "type": "nominal",
        "scale": {
          "domain": ["Aggravated Assault", "Robbery", "Rape",  "Murder Manslaughter"],
          "range": ["darkblue", "purple", "orange", "darkred"]
        }
      },
      "tooltip": [
        {"field": "State", "type": "nominal", "title": "State"},
        {"field": "Crime Type", "type": "nominal", "title": "Crime Type"},
        {"field": "Value", "type": "quantitative", "title": "Crimes per 10,000 people"}
    ]

      
    }
  }